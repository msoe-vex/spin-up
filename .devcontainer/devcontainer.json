// Docs: https://aka.ms/vscode-remote/devcontainer.json
{
    "context": "../", // top level folder
    "dockerFile": "Dockerfile", // Dockerfile name
    "build": {
        "args": {
            "WORKSPACE": "${containerWorkspaceFolder}"
        }
    },
    // This will launch the container as a non-root user
    "remoteUser": "ros",
    "runArgs": [
        // This will allow you to use a ptrace-based debugger like C++
        "--cap-add=SYS_PTRACE",
        "--security-opt=seccomp:unconfined",
        "--security-opt=apparmor:unconfined"
        // "seccomp=unconfined"
    ],
    "extensions": [
        "ms-azuretools.vscode-docker",
        "ms-vscode.cpptools",
        "twxs.cmake",
        "ms-iot.vscode-ros",
        "streetsidesoftware.code-spell-checker",
        // File editor extensions
        "DotJoshJohnson.xml",
        "redhat.vscode-yaml",
        "yzhang.markdown-all-in-one"
    ]
}